<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <TextView
            android:id="@+id/text_view_aichi_prefecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:text="Aichi prefecture"
            android:textColor="#222222"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/text_view_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_aichi_prefecture"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:padding="12dp"
            android:text="karina.statinaite@gmail.com" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_okazaki"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_email_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/okazaki" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:background="@drawable/gradient_background"
                android:fontFamily="sans-serif-light"
                android:text="Okazaki"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_gamagori"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_okazaki"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gamagori" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:background="@drawable/gradient_background"
                android:fontFamily="sans-serif-light"
                android:text="Gamagori"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_inuyama"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_gamagori"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="24dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/castle_in_inuyama" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:background="@drawable/gradient_background"
                android:fontFamily="sans-serif-light"
                android:text="Inuyama"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_tokoname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_inuyama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="24dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tokoname" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:background="@drawable/gradient_background"
                android:fontFamily="sans-serif-light"
                android:text="Tokoname"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>